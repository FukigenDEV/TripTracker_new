<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBFB"
    android:orientation="vertical"
    tools:context="group1.apps.triptracker.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:src="@drawable/ic_user_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A80133"
                android:padding="5dp"
                android:text="Name"
                android:textColor="#2D0005" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CC0133"
                android:padding="10dp"
                android:text="Francis of the Filth"
                android:textColor="#FFF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A80133"
                android:padding="5dp"
                android:text="Location"
                android:textColor="#2D0005" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CC0133"
                android:padding="10dp"
                android:text="Monoxide 12"
                android:textColor="#FFF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A80133"
                android:padding="5dp"
                android:text="Nationality"
                android:textColor="#2D0005" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CC0133"
                android:padding="10dp"
                android:text="Ricefieldian"
                android:textColor="#FFF"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#CC0133"
                android:padding="5dp"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_settings_black_24dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/layout_bg_top_radius"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:padding="8sp"
            android:text="MEMORIES"
            android:textColor="#2D0005"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnAddMemory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ic_add_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/layout_bg">

            <ImageView
                android:id="@+id/imvBeach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/beach" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/imvBeach"
                android:layout_alignEnd="@id/imvBeach"
                android:layout_margin="1dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="11-11-2000"
                android:textColor="#2F0A10"
                android:textSize="12sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/layout_bg" />

        <Space
            android:layout_width="5dp"
            android:layout_height="5dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/layout_bg" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/layout_bg" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/layout_bg" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/layout_bg" />

        <Space
            android:layout_width="5dp"
            android:layout_height="5dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/layout_bg" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/layout_bg"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_navigate_next_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#A80133"
            android:padding="5dp"
            android:src="@drawable/ic_map_black_24dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#A80133"
            android:padding="5dp"
            android:src="@drawable/ic_menu_black_24dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#A80133"
            android:padding="5dp"
            android:src="@drawable/ic_photo_camera_black_24dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#A80133"
            android:padding="5dp"
            android:src="@drawable/ic_person_black_24dp" />

    </LinearLayout>

</LinearLayout>